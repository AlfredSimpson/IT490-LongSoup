[
  {rabbit, [
    {ssl_listeners, [5671]},
    {ssl_options, [{cacertfile, /etc/rabbitmq/ssl/ca_certificate.pem},
                   {certfile,   /etc/rabbitmq/ssl/server_LongSoup-DB_certificate.pem},
                   {keyfile,    /etc/rabbitmq/ssl/server_LongSoup-DB_key.pem},
                   {verify,     verify_peer},
                   {fail_if_no_peer_cert, false}
                 ]}
  ]}
].

