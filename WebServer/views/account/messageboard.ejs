<!DOCTYPE html>
<html lang="en">

<head>

    <title>Message Boards | CommonGrounds</title>
    <%- include('../partials/head'); %>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="js/messageboard.js"></script>
</head>

<body>
    <%- include('../partials/loggedheader'); %>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-6">
                    <h1>The Message Boards</h1>
                    <p class="lead">Got something to say?</p>
                </div>
            </div>
        </div>
        <div class="container my-5">
            <div class="row">
                <div class="col-md-12">
                    <div id="tableContainer"></div>
                    <div class="form-group">
                        <input type="text" id="messageContentInput" class="form-control"
                            placeholder="Enter your message">
                        <button id="sendMessageButton" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/footer'); %>
