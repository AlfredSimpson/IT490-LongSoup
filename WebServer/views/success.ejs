                    <% } else { %>
                        <p>Failed to call oAuthed object</p>
                        <% } %>

            </div>
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500x500" alt="CommonGrounds Image" class="img-fluid">
            </div>
        </div>
    </div>

    <footer class="bg-light py-3">
        <div class="container">
            <p class="text-center">&copy; 2023 CommonGrounds</p>
        </div>
