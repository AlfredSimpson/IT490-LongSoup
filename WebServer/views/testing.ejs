<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CommonGrounds</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="shortcut icon" href="#">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <!-- import the longajax.js file -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="js/longajax.js"></script>
</head>

<body>
    <main>
        <section>
            <div class="col-md-5 container-fluid">
                <!-- A button -->
                <!-- <button id="executeProcessAjaxButton" class="btn btn-primary"></button> -->
                <button id="fetchDataButton">Fetch Data from Server</button>
                <div id="tableContainer" class="table table-dark table-striped"></div>

            </div>
        </section>
    </main>
    <script>document.getElementById('executeProcessAjaxButton').addEventListener('click', function () {
            axios.get('/api/postMessage') // Make a GET request to the API endpoint
                .then(function (response) {
                    // Handle the response data (optional)
                    console.log(response.data.message); // Should print 'processAjax() executed successfully.'
                })
                .catch(function (error) {
                    // Handle any errors here
                    console.error(error);
                });
        });</script>
    <footer class="bg-light py-3">
        <div class="container">
            <p class="text-center">&copy; 2023 CommonGrounds</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
